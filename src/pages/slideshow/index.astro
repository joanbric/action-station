---
const ImgCollection = import.meta.glob('./imgs/*.webp', { eager: true });

type ImageModule = {
	default: {
		src: string;
	};
};

const images = Object.entries(ImgCollection).map(
	([path, module]) => (module as ImageModule).default.src
);
---

<div class="slideshow">
	{
		images.map((image, index) => (
			<img
				src={image}
				alt="Activities"
				class="content"
				style={`--delay: ${index * 10}s;`}
			/>
		))
	}
	{
		images.map((image, index) => (
			<img
				src={image}
				alt="Activities"
				class="background"
				style={`--delay: ${index * 10}s;`}
			/>
		))
	}
</div>

<style>
	.slideshow {
		position: relative;
		width: 100%;
		height: 100dvh;
		overflow: hidden;
	}

	.slideshow img.content,
	.slideshow img.background {
		position: absolute;
		top: 0;
		left: 50%;
		translate: -50% 0%;
		width: auto;
		height: 100%;
		object-fit: contain;
		opacity: 0;

		animation: fade 180s infinite var(--delay);
	}
	.slideshow img.content {
		z-index: 10;
	}
	.slideshow img.background {
		scale: 1.5;
		filter: blur(15px) brightness(0.4) contrast(0.8);
	}

	/* Animaci√≥n de fade */
	@keyframes fade {
		0% {
			opacity: 0;
		}
		2% {
			opacity: 1;
		}
		23% {
			opacity: 1;
		}
		25% {
			opacity: 0;
		}
		100% {
			opacity: 0;
		}
	}
</style>
