---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Action station"
		/>
		<meta
			name="viewport"
			content="width=device-width"
		/>
		<link
			rel="icon"
			type="image/svg+xml"
			href="/favicon.svg"
		/>
		<title>{title}</title>
	</head>
	<body>
		<header class="py-5">
			<nav class="flex px-4 justify-between lg:flex-nowrap lg:align-center">
				<a href="/">
					<img
						class="min-w-[200px] max-w-[300px]"
						src="/action-station-logo.svg"
						alt="Action Station logo"
					/></a
				>

				<!-- Mobile menu button -->
				<button
          id="btnMenu"
					type="button"
					class="lg:hidden"
				>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="24"
						height="24"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
						><path
							stroke="none"
							d="M0 0h24v24H0z"
							fill="none"
						></path><path d="M4 6l16 0"></path><path d="M4 12l16 0"></path><path
							d="M4 18l16 0"></path></svg
					>
				</button>
				<ul id="menu"
					class="flex-col justify-center gap-7 lg:flex-row hidden fixed lg:static pt-10 lg:pt-0 inset-0 bg-gray-950/90 lg:bg-inherit text-white lg:text-blue-500 lg:min-h-0 z-10 lg:flex lg:justify-end lg:pr-5"
				>
        <button class="absolute top-5 right-5 text-red-400 lg:hidden" id="btnClose"><svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M18 6l-12 12" /><path d="M6 6l12 12" /></svg></button>
        <li class="py-3 text-center"><a href="/" class="no-underline hover:underline font-bold text-xl">Home</a></li>
        <li class="py-3 text-center"><a href="https://www.actionstation.org.uk/#a189b69ad50f0b9fbebbe29afffaf1ec" class="no-underline hover:underline font-bold text-xl">Activities</a></li>
        <li class="py-3 text-center"><a href="https://www.actionstation.org.uk/Adult-Learning/" class="no-underline hover:underline font-bold text-xl">Learning</a></li>
        <li class="py-3 text-center"><a href="https://www.actionstation.org.uk/Contacts/" class="no-underline hover:underline font-bold text-xl">Contact</a></li>	
        <li class="py-3 text-center">
						<a
							class="no-underline hover:underline font-bold text-xl"
							href="/useful-links"
							>Useful Links</a
						>
					</li>

				</ul>
			</nav>
		</header>
		<div class="pb-6">
			<slot />
		</div>
		<footer class="py-5 mt-20">
			<p class="text-center">
				Visit the main <a
					class="underline text-blue-500"
					href="https://actionstation.org.uk"
					>Action Station Official Website</a
				>
			</p>
			<p class="text-center">
				Made with ❤️ by <a
					class="underline text-blue-500"
					href="https://github.com/joanbric"
					>joanbric</a
				>
			</p>
		</footer>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
	}
</style>


<script>
  const $btnMenu = document.getElementById('btnMenu') as HTMLButtonElement;
  const $menu = document.getElementById('menu') as HTMLElement;
  const $btnClose = document.getElementById('btnClose') as HTMLButtonElement;

if($btnMenu && $menu) { 
  $btnMenu.addEventListener('click', () => {
    $menu.classList.toggle('hidden');
    $menu.classList.toggle('flex');

  });
}

if($btnClose) {

  $btnClose.addEventListener('click', () => {
    $menu.classList.toggle('hidden');
    $menu.classList.toggle('flex');
  });
}
</script>